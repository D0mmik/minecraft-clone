{
  "name": "minecraft-clone",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "cd client && vite",
    "dev:server": "bun server/index.ts",
    "dev:admin": "cd admin && vite",
    "build": "cd client && vite build && cd ../admin && vite build",
    "build:admin": "cd admin && vite build",
    "start": "bun server/index.ts",
    "typecheck": "tsc -p client/tsconfig.json --noEmit && tsc -p server/tsconfig.json --noEmit && tsc -p admin/tsconfig.json --noEmit",
    "tunnel": "cloudflared tunnel --url http://localhost:3001"
  },
  "dependencies": {
    "simplex-noise": "^4.0.3",
    "three": "^0.170.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/three": "^0.170.0",
    "@vitejs/plugin-react": "^4.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.0"
  }
}
